@model IEnumerable<PotOfMcGold.Models.Portfolio>

@{
    ViewBag.Title = "Index";
}


<form id="portfolio-form" action="/portfolios/save" method="post">
    <div class="form-row">
        <div class="form-group col-md-2">
            <input autocomplete="off" class="form-control" placeholder="Coin Name" type="text" id="name" name="name">
        </div>
        <div class="form-group col-md-2">
            <input autocomplete="off" class="form-control" placeholder="Volume" type="text" id="volume" name="volume">
        </div>
        <div class="form-group col-md-2">
            <input autocomplete="off" class="form-control" placeholder="Notes" type="text" id="Notes" name="Notes">
        </div>
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-warning">Lock Em Up</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Coin</th>
            <th>Volume</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.Volume</td>
                <td>@x.Notes</td>
                <td><a href="/portfolios/delete/@x.Id">Delete</a></td>
                <td><a href="/portfolios/editview/@x.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>


