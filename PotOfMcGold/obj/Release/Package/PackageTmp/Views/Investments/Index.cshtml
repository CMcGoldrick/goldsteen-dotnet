@model IEnumerable<PotOfMcGold.Models.Investment>

@{
    ViewBag.Title = "Index";
}


<form id="investment-form" action="/investments/save" method="post">
    <div class="form-row">
        <div class="form-group col-md-2">
            <input autocomplete="off" class="form-control" placeholder="Purchase Date" type="text" id="date" name="date">
        </div>
        <div class="form-group col-md-2">
            <select autocomplete="off" class="form-control" placeholder="Coin Name" type="text" id="name" name="name">
                <option disabled selected>Coin Name</option>
                <option>BTC</option>
                <option>BXY</option>
                <option>EOS</option>
                <option>ETH</option>
                <option>LTC</option>
                <option>USDC</option>
                <option>XRP</option>
                <option>ZEC</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <select autocomplete="off" class="form-control" placeholder="Exchange" type="text" id="exchange" name="exchange">
                <option disabled selected>Exchange</option>
                <option>Coinbase</option>
                <option>Binance</option>
                <option>Beaxy</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <input autocomplete="off" class="form-control" placeholder="Fiat Amount" type="text" id="amount" name="amount">
        </div>
        <div class="form-group col-md-2">
            <input autocomplete="off" class="form-control" placeholder="Notes" type="text" id="notes" name="notes">
        </div>

        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-warning">Ching Ching</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Coin</th>
            <th>Exchange</th>
            <th>$ Amount</th>
            @*<th>Volume</th>*@
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Date</td>
            <td>@x.Name</td>
            <td>@x.Exchange</td>
            <td>$ @x.Amount</td>
            @*<td>@x.Volume</td>*@
            <td>@x.Notes</td>
            <td><a href="/investments/delete/@x.Id">Delete</a></td>
            <td><a href="/investments/editview/@x.Id">Edit</a></td>
        </tr>
        }
    </tbody>
</table>



