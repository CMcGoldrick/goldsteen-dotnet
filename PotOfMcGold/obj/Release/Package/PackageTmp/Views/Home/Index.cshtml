@model IEnumerable<PotOfMcGold.Models.Portfolio>

@{
    ViewBag.Title = "Pot of McGold";

    string progress = (Model.First().Volume * 100).ToString() +"%";

    string satoshis = Math.Truncate(Model.First().Volume * 100000000).ToString("#,##0.00");
}

<h2 class="text-center"> The Bitcoin Road</h2>
<p class="text-center">
    Progress: @progress >> @satoshis Satoshis
</p>

<div class="progress">
    <div class="progress-bar bg-warning" role="progressbar" style="width:@progress" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <h4 class="text-center">Donate BTC:</h4>
        <p id="btc-address" class="text-center">3HPHomj5FZ3QM6unZnHWMZwcCmEBswadsx</p>
        <button onclick="copyCalcVal()" type="button" class="btn btn-default" data-dismiss="modal">Copy Number</button>
    </div>
    <div class="col-md-2">     
    </div>
</div>

